
int main()
{
	int row;
	cin >> row;
	for (int i = 0; i <= row - 1; i++) {
		for (int j = 1; j < row - i; j++) {
			cout << "-";

		}
		for (int k = 0; k <= i; k++) {
			cout << "*";
			//cout << " ";

		}

		for (int k = i - 1; k >= 0; k--) {
			cout << "*";

		}
		for (int j = 1; j < row - i; j++) {
			cout << "-"<<"-";

		}
		for (int k = 0; k <= i; k++) {
			cout << "*";
			//cout << " ";

		}
		for (int k = i - 1; k >= 0; k--) {
			cout << "*";
		}

		cout << endl;

	}
}
