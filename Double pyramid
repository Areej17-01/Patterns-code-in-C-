
int main()
{
	int row;
	cin >> row;
	for (int i = 0; i <= row; i++) {
		for (int j = 0; j < row - i; j++) {
			cout << " ";

		}
		for (int k = 0; k <= i; k++) {
			cout << "*";
			cout << " ";
			if (k == i) {

				for (int j = 0; j < row - i; j++) {
					cout << " ";
					cout << " ";

				}
				for (int k = 0; k <= i; k++) {
					cout << "*";
					cout << " ";
				}
				cout << endl;
			}

		}
		cout << endl;
	}

}
